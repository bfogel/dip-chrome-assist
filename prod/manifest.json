{
  "manifest_version": 2,
  "name": "DipAssist",
  "version": "1.0",
  "permissions": [
    "tts",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.backstabbr.com/*"
      ],
      "js": [
        "DipAssistTimeRemaining.js", 
        "DipAssistAlertManager.js",
        "content.js"
      ]
    }
  ],
  
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html"
      }


}