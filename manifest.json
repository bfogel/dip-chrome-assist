{
  "manifest_version": 2,
  "name": "DipAssist",
  "version": "1.0",
  "permissions": [
    "tts"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.backstabbr.com/*"
      ],
      "js": [
        "DipAssistTimeRemaining.js", 
        "DipAssistAlertManager.js",
         "content.js"
      ]
    }
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  ,

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}